<div class="container-fluid min-vh-100">
    <div class="row h-100">

        <!-- LEFT BRANDING -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-primary text-white">
            <div class="text-center">
                <img src="~/Resources/images/pepsi-logo.png"
                     style="max-width:180px"
                     class="mb-3" />
                <h2 class="fw-bold">WELCOME TO<br>PEPSI COLA</h2>
                <p class="opacity-75">
                    Refresh your experience with every order 🥤
                </p>
            </div>
        </div>

        <!-- RIGHT LOGIN CARD -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="card shadow p-4" style="width:100%; max-width:420px;">

                <a href="@Url.Action("Index","Home")"
                   class="btn btn-outline-primary btn-sm mb-3">
                    ← Back
                </a>

                <h3 class="fw-bold mb-1">Sign In</h3>
                <p class="text-muted mb-4">
                    Login using your User ID and password
                </p>

                <form method="post" action="/Account/Login">

                    <!-- USER ID -->
                    <div class="mb-3">
                        <label class="form-label">UserName</label>
                        <input type="text"
                               name="username"
                               class="form-control"
                               placeholder="Enter your Username"
                               required />
                    </div>

                    <!-- PASSWORD -->
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password"
                               name="Password"
                               class="form-control"
                               placeholder="Enter your password"
                               required />
                    </div>

                    <!-- OPTIONS -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Keep me logged in
                            </label>
                        </div>

                        <a href="@Url.Action("ForgotPassword", "Account")"
                           class="small">
                            Forgot password?
                        </a>
                    </div>

                    <!-- LOGIN BUTTON -->
                    <button type="submit"
                            class="btn btn-primary w-100">
                        Log In
                    </button>

                    <hr class="my-4" />

                    <p class="text-center mb-0">
                        Don’t have an account?
                        <a href="@Url.Action("Register","Account")">
                            Create one
                        </a>
                    </p>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @ViewBag.Message
                        </div>
                    }

                </form>
            </div>
        </div>

    </div>
</div>
