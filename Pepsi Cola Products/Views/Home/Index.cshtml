@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="~/Content/Homepage.css" />

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <img src="~/Resources/Images/Pepsi-logo.png" class="img-fluid mb-3" style="max-width:45px;" alt="Pepsi Logo">

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarText">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Brands</a></li>

            </ul>

            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#address">
                Order Now
            </button>
        </div>
    </div>
</nav>

<div class="modal fade" id="address" tabindex="-1" aria-labelledby="addressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">

            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body text-center p-4">
                <!-- Pepsi Logo -->
                <img src="~/Resources/Images/Pepsi-logo.png" class="img-fluid mb-3" style="max-width:160px;" alt="Pepsi Logo">

                <h2 id="addressModalLabel" class="fw-bold mb-2">Sign In or Sign Up</h2>
                <p class="text-muted mb-4">Please log in or create an account to continue your Pepsi order.</p>

                <div class="d-grid gap-3 col-10 mx-auto">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg">Sign Up</a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary btn-lg">Sign In</a>
                </div>

                <div class="mt-4 small text-muted">
                    By continuing, you agree to Pepsi’s <a href="#" class="text-decoration-underline">Terms & Conditions</a> and <a href="#" class="text-decoration-underline">Privacy Policy</a>.
                </div>
            </div>

        </div>
    </div>
</div>



<!-- HERO -->
<div class="container-fluid hero-section p-0">
    <div class="row g-0 min-vh-100">

        <div class="col-lg-6">
            <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300034663e97e62092ac.png"
                 class="hero-img"
                 alt="">
        </div>

        <div class="col-lg-6 hero-overlay">


            <div class="hero-content">
                <h1 class="fw-bold display-6 mb-4 text-center">
                    Welcome To
                </h1>
                <h1 class="fw-bold display-6 mb-4 mt-1">
                    Pepsi-Cola Products Philippines Inc.
                </h1>

                <p class="fs-5 fw-medium">
                    PCPPI is the exclusive manufacturer of PepsiCo beverages in the Philippines.
                </p>
            </div>
        </div>

    </div>
</div>

<section class="snap-start">
    <div class="container-fluid min-vh-100 position-relative p-0 bg-primary-custom">

        <!-- Radial Gradient -->
        <div class="gradient-bg position-absolute top-0 start-0 w-100 h-100 rounded-circle"></div>

        <div class="position-relative d-flex flex-column justify-content-between h-100">

            <!-- TEXT + BUTTON -->
            <div class="px-4 px-xl-5 py-4 py-xl-5">
                <h2 class="fw-bold text-white mb-3 display-6 display-xl-4">
                    The Brands you love
                </h2>

                <a href="https://pepsiphilippines.com/brand"
                   class="btn btn-light btn-lg position-relative overflow-hidden pepsi-btn mt-4">
                    <span class="btn-text">See all Brands</span>
                    <span class="arrow right-arrow">→</span>
                    <span class="arrow left-arrow">→</span>
                </a>
            </div>

            <!-- IMAGES -->
            <div class="d-flex flex-column align-items-md-center mt-3">

                <!-- BRANDS -->
                <div class="brands-scroll d-flex align-items-end justify-content-center overflow-auto px-4">

                    <!-- Gatorade -->
                    <div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:0s">
                        <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300320163e985012e4ea.png" alt="Gatorade">
                    </div>

                    <!-- Premier Water -->
                    <div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:.1s">
                        <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300302763e984a3322db.png" alt="Premier Water">
                    </div>

                    <!-- Sting -->
                    <div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:.2s">
                        <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300292263e98462c39b5.png" alt="Sting">
                    </div>

                    <!-- Pepsi -->
                    <div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:.3s">
                        <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300244863e98350d2844.png" alt="Pepsi">
                    </div>

                    <!-- Mountain Dew -->
                    <div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:.4s">
                        <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300240963e98329b4aa6.png" alt="Mountain Dew">
                    </div>

                    <!-- Mirinda -->
                    @*<div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:.5s">
                            <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/0213202300232363e982fb80229.png" alt="Mirinda">
                        </div>*@

                    <!-- Gatorade Variant -->
                    <div class="brand-item scroll-animate duration-200 transform md:hover:-translate-y-20" style="--delay:.6s">
                        <img src="https://sgp1.digitaloceanspaces.com/pcppicms/pcppicms/2022/june/cms/10112023081432652659680c0e1.png" alt="Gatorade Variant">
                    </div>

                </div>

                <!-- WOODEN BOARD -->
                <img src="https://pepsiphilippines.com/images/wooden-board.png"
                     class="img-fluid w-100 mt-n5 scroll-animate"
                     alt="">
            </div>
        </div>
    </div>
</section>

